
{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "types": [],
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "outDir": "./bundles",
    "lib": [
        "es2015",
        "dom"
    ],
    "paths": {
      "@angular/*": [
        "../../../node_modules/@angular/*"
      ]
    }
  },
  "include": [
      "index.ts",
      "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}